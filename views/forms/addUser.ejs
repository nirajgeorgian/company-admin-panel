<% layout('layout') %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 col-xs-offset-1">
      <form action="" role="form" method="post" autocomplete="off">
        <h2>Add User <small>It's free and will be always.</small></h2>
        <hr class="colorgraph col-sm-11 col-md-11 col-xs-9">
        <div class="row">
          <% if (errors.length > 0) { %>
          <div class="col-sm-12 col-xs-10 col-lg-12">
            <div class="alert alert-danger alert-dismissible text-center" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong> <%= errors %> </strong>
            </div>
          </div>
          <% } else if (success.length > 0) { %>
          <div class="col-sm-12 col-xs-10 col-lg-12">
            <div class="alert alert-success alert-dismissible text-center" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong> <%= success %> </strong>
            </div>
          </div>
          <% } %>
        </div>
          <div class="row">
            <div class="col-xs-10 col-sm-6 col-md-6">
              <div class="form-group">
                <input type="text" name="first_name" id="user_first_name" class="form-control input-lg" placeholder="Firstname" tabindex="1">
              </div>
            </div>
            <div class="col-xs-10 col-sm-6 col-md-6">
              <div class="form-group">
                <input type="text" name="last_name" id="user_last_name" class="form-control input-lg" placeholder="Lastname" tabindex="2">
              </div>
            </div>
            <div class="col-xs-10 col-sm-12 col-md-12">
              <div class="form-group">
                <input type="text" name="user_username" id="user_username" class="form-control input-lg" placeholder="Username" tabindex="3">
              </div>
            </div>
            <div class="col-xs-10 col-sm-12 col-md-12">
              <div class="form-group">
                <input type="email" name="user_email" id="user_email" class="form-control input-lg" placeholder="Email" tabindex="4">
              </div>
            </div>
            <!-- <hr class="colorgraph"> -->
            <!-- <div class="row"> -->
              <div class="col-xs-10 col-sm-6 col-md-6">
                <div class="form-group">
                  <input type="submit" name="register" value="Add User" class="btn btn-primary btn-block btn-lg" tabindex="7">
                </div>
              </div>
              <div class="col-xs-10 col-sm-6 col-md-6">
                <div class="form-group">
                  <a href="/" class="btn btn-default btn-block btn-lg">Go to Users</a>
                </div>
              </div>
              <!-- <div class="col-xs-12 col-md-6">
              </div> -->
            <!-- </div> -->
          </div>
      </form>
    </div>
  </div>
</div>
