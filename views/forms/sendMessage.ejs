<%- layout('layout') %>
<div class="container">
  <div class="row">
    <% if (success.length > 0 ) { %>
    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="alert alert-success alert-dismissible text-center" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <strong> <%= success %> </strong>
      </div>
    </div>
    <% } %>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6">
      <h2 class="text-center">Email sending message</h2>
      <hr>
      <form action="#" method="POST" autocomplete="off" name="sendImmediatelyMail">
        <div class="form-group">
          <label for="emailtitle" class="badge stages">Your email custom heading</label>
          <input type="text" class="form-control" id="emailtitle" placeholder="Email sending heading goes here." name="emailtitle">
        </div>
        <hr>
        <div class="row">
          <div class="form-group col-md-6 col-sm-6">
            <label for="sendto" class="badge stages">Send to</label>
            <input type="text" class="form-control" id="sendto" placeholder="Tagged as" name="taggedas">
          </div>
          <div class="form-group col-md-6 col-sm-6">
            <label for="notsendto" class="badge stages">And not send to</label>
            <input type="text" class="form-control" id="notsendto" placeholder="Not Tagged as" name="nottaggedas">
          </div>
        </div>
        <hr>
        <div class="form-group">
          <label for="schedule" class="badge stages">Schedule</label>
          <div class="row">
            <div class="col-md-1 col-sm-1">
              <h4>After</h4>
            </div>
            <div class="col-md-5 col-sm-5">
              <input type="text" class="form-control" id="schedule" placeholder="No. of days" name="numofdays">
            </div>
            <div class="col-md-6 col-sm-6">
              <h4>days of inclusion to database</h4>
            </div>
          </div>
        </div>
        <hr>
        <h4 class="text-center">Message</h4>
        <p>Use {{{fname}}} for first name, {{{lname}}} for last name, {{{company for company}}}</p>
        <div class="form-group">
          <input type="text" class="form-control" name="mailHeading" value="SlickAccount - The profitability software for {{{company}}}">
          <hr>
          <div class="row">
            <div class="col-md-2 col-sm-2">
              <p>{{fname}} default:</p>
            </div>
            <div class="col-md-4 col-sm-4">
              <input type="text" class="form-control" name="fname" placeholder="John" name="fname">
            </div>
            <div class="col-md-2 col-sm-2">
              <p>{{lname}} default:</p>
            </div>
            <div class="col-md-4 col-sm-4">
              <input type="text" class="form-control" name="lname" placeholder="Doe" name="lname">
            </div>
            <div class="col-md-5 col-sm-5">
              <p>{{company}} default:</p>
            </div>
            <div class="col-md-7 col-sm-7">
              <input type="text" class="form-control" name="company" placeholder="Slickaccount" name="company">
            </div>
          </div>
        </div>
        <textarea name="createMailMessage" rows="8" cols="80" class="form-control input-lg" id="message" placeholder="Your message here"></textarea>
        <input type="submit" class="btn btn-default" value="submit">
        <input type="submit" class="btn btn-default" value="Send Immediately" id="send_immediately">
      </form>
    </div>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <h2 class="text-center">Email sending message Teplates</h2>
      <hr>
      <% if(emailTitle.length != 0) { %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Message</th>
              <th>Edit</th>
              <th>Remove</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i < emialTitle.length; i++) { %>
            <tr>
                <td><%= emailTitle[i] %></td>
                <td><a href="/admin/send/message/<%= emailTitle[i] %>" class="btn btn-default">Edit</a></td>
                <td><a href="/admin/messages/delete/<%= emailTitle[i] %>" class="btn btn-default">Delete</a></td>
              </tr>
              <% } %>
          </tbody>
        </table>
      <% } else { %>
        <h3 class="text-center">No messages are configured.</h3>
      <% } %>
    </div>
</div>
</div>
