<% layout('layout') %>
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-sm-8 col-md-6 col-xs-offset-2 col-md-offset-3 col-xs-offset-1">
      <form action="" role="form" method="post" autocomplete="off">
        <h2>Login here <small>It's free and will be always.</small></h2>
        <hr class="colorgraph col-sm-11 col-md-11 col-xs-9">
        <div class="row">
          <% if (message.length > 0 ) { %>
            <div class="col-sm-12 col-xs-10 col-lg-12">
              <div class="alert alert-danger alert-dismissible text-center" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong> <%= message %> </strong>
              </div>
            </div>
            <% } else if (success.length > 0) { %>
              <div class="col-sm-12 col-xs-10 col-lg-12">
                <div class="alert alert-success alert-dismissible text-center" role="alert">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <strong> <%= success %> </strong>
                </div>
              </div>
              <% } else if (info.length > 0) { %>
                <div class="col-sm-12 col-xs-10 col-lg-12">
                  <div class="alert alert-success alert-dismissible text-center" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong> <%= success %> </strong>
                  </div>
                </div>
                <% } %>
              </div>
              <div class="row">
                <div class="col-xs-10 col-sm-12 col-md-12">
                  <div class="form-group">
                    <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Email" tabindex="1">
                  </div>
                </div>
                <div class="col-xs-10 col-sm-12 col-md-12">
                  <div class="form-group">
                    <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password" tabindex="1">
                  </div>
                  <hr class="colorgraph">
                </div>
                <!-- <hr class="colorgraph"> -->
                <div class="col-xs-10 col-sm-6 col-md-6">
                  <div class="form-group">
                    <input type="submit" name="login" value="Login" class="btn btn-primary btn-block btn-lg" tabindex="3">
                  </div>
                </div>
                <div class="col-xs-10 col-sm-6 col-md-6">
                  <div class="form-group">
                    <a href="/admin/signup" class="btn btn-default btn-block btn-lg">Register</a>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
